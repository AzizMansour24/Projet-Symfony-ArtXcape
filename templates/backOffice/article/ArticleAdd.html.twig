{% extends 'base2.html.twig' %}

{% block body %}
<div class="card-body">
    <div>
        <h1>{{ titre }} un Article</h1>
        <p class="card-description"></p>

        {{ form_start(form) }}

        <!-- Titre -->
        <div class="form-group">
            {{ form_label(form.titre, 'Titre de l\'Article') }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'article'}}) }}
            <small class="text-danger">{{ form_errors(form.titre) }}</small>
        </div>

        <!-- Description -->
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            <small class="text-danger">{{ form_errors(form.description) }}</small>
        </div>

        <!-- Prix -->
        <div class="form-group">
            {{ form_label(form.prix, 'Prix') }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix'}}) }}
            <small class="text-danger">{{ form_errors(form.prix) }}</small>
        </div>

        <!-- Date de Publication -->
        <div class="form-group">
            {{ form_label(form.date_pub, 'Date de Publication') }}
            {{ form_widget(form.date_pub, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.date_pub) }}</small>
        </div>

        <!-- Disponible -->
        <div class="form-group">
            {{ form_label(form.disponible, 'Disponible') }}
            {{ form_widget(form.disponible, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.disponible) }}</small>
        </div>

        <!-- Nombre d'articles -->
        <div class="form-group">
            {{ form_label(form.nbrarticle, 'Nombre d\'articles') }}
            {{ form_widget(form.nbrarticle, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.nbrarticle) }}</small>
        </div>

        <!-- Contenu -->
        <div class="form-group">
            {{ form_label(form.contenu, 'Contenu') }}
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.contenu) }}</small>
        </div>

        <!-- Catégorie -->
        <div class="form-group">
            {{ form_label(form.categorie, 'Catégorie') }}
            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.categorie) }}</small>
        </div>

        <!-- Galerie -->
        <div class="form-group">
            {{ form_label(form.galerie, 'Galerie') }}
            {{ form_widget(form.galerie, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(form.galerie) }}</small>
        </div>

        <button type="submit" class="btn btn-inverse-primary btn-fw">{{ titre }}</button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
