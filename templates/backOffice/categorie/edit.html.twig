{% extends 'base2.html.twig' %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper"> 
        <div class="page-header">
            <h3 class="page-title">Modifier une Catégorie</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('back_showcategorie') }}">Catégories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Modifier</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Modifier la catégorie</h4>
                        <p class="card-description">Modifiez les informations ci-dessous</p>

                        {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="mt-3">
                                <a href="{{ path('back_showcategorie') }}" class="btn btn-light">Annuler</a>
                                {{ form_widget(form.save) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 