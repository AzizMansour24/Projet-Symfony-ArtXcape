{% extends 'base2.html.twig' %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add New 3D Model</h4>
        <p class="card-description">Fill in the model details</p>

        {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.name, 'Model Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter model name'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.fileUrl, '3D Model File', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.fileUrl, {'attr': {'class': 'form-control', 'accept': '.glb,.gltf,.obj,.fbx'}}) }}
                        {{ form_errors(form.fileUrl) }}
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Enter model description'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.event, 'Associated Event', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.event, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.event) }}
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a href="{{ path('app_models_show') }}" class="btn btn-light">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %} 