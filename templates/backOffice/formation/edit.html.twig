{% extends 'base2.html.twig' %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Modifier la formation</h4>
        <p class="card-description">Modifier les informations de la formation</p>
        
        {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
            <div class="form-group"> 
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.date_debut) }}
                {{ form_widget(form.date_debut) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.date_fin) }}
                {{ form_widget(form.date_fin) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.nbrpart) }}
                {{ form_widget(form.nbrpart) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.video) }}
                {{ form_widget(form.video) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie) }}
            </div>

            {{ form_widget(form.save) }}
            <a href="{{ path('back_showformation') }}" class="btn btn-light">Annuler</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %} 