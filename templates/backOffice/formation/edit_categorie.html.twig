{% extends 'base2.html.twig' %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Modifier la cat√©gorie</h4>
         
        <div class="mt-4">
            {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
                <div class="form-group">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'font-weight-medium'}}) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'font-weight-medium'}}) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.date_creation, null, {'label_attr': {'class': 'font-weight-medium'}}) }}
                    {{ form_widget(form.date_creation) }}
                    {{ form_errors(form.date_creation, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mt-3">
                    <a href="{{ path('back_showcategorie') }}" class="btn btn-light">
                        <i class="mdi mdi-arrow-left"></i> Retour
                    </a>
                    {{ form_widget(form.save) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}
{% endblock %} 