{% extends 'base.html.twig' %}

{% block title %}Liste des mots filtrés{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des mots filtrés</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Mot</th>
                    <th>Remplacement</th>
                </tr>
            </thead>
            <tbody>
                {% for badWord in badWords %}
                    <tr>
                        <td>{{ badWord.id }}</td>
                        <td>{{ badWord.word }}</td>
                        <td>{{ badWord.replacement }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %} 