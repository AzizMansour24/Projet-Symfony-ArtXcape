            <script>
        function filterMenu() {
            // R√©cup√©rer la valeur de la barre de recherche
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            
            // R√©cup√©rer tous les √©l√©ments du menu
            const menuItems = document.querySelectorAll('.nav-item.menu-items');
            
            // Parcourir chaque √©l√©ment du menu
            menuItems.forEach(item => {
                const menuTitle = item.querySelector('.menu-title').textContent.toLowerCase();
                
                // Si le texte du menu contient la recherche, afficher l'√©l√©ment, sinon le cacher
                if (menuTitle.indexOf(searchInput) !== -1) {
                    item.style.display = '';  // Afficher
                } else {
                    item.style.display = 'none';  // Cacher
                }
            });
        }
