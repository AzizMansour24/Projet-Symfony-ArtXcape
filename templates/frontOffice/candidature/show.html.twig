{% extends 'base.html.twig' %}

{% block title %}Candidature - {{ candidature.candidat.nom }} {{ candidature.candidat.prenom }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center"> 
        <div class="col-lg-10">
            <div class="shadow-lg rounded-4 overflow-hidden" style="background: linear-gradient(135deg, #f9f9f9, #e3e3e3);">
                <!-- Header: Candidate Profile -->
                <div class="text-white d-flex align-items-center py-5 px-4" style="background: #007bff;">
                    <i class="fas fa-user-circle me-3" style="font-size: 80px;"></i>
                    <div>
                        <h1 class="mb-1">{{ candidature.candidat.nom }} {{ candidature.candidat.prenom }}</h1>
                        <p class="mb-0"><i class="fas fa-calendar-alt me-1"></i> Candidature déposée le {{ candidature.dateCandidature|date('d/m/Y H:i') }}</p>
                    </div>
                </div>

                <div class="p-5">
                    <div class="row">
                        <!-- Left Column: Candidate Info -->
                        <div class="col-md-4">
                            <div class="rounded-3 p-4 mb-4" style="background: rgba(255, 255, 255, 0.6);">
                                <h4 class="text-primary"><i class="fas fa-user-tie me-2"></i> Informations du Candidat</h4>
                                <p class="fs-5"><strong>Nom:</strong> {{ candidature.candidat.nom }}</p>
                                <p class="fs-5"><strong>Prénom:</strong> {{ candidature.candidat.prenom }}</p>
                                <p class="fs-5"><strong>Email:</strong> {{ candidature.candidat.email }}</p>
                            </div>

                            <div class="rounded-3 p-4" style="background: rgba(255, 255, 255, 0.6);">
                                <h4 class="text-primary"><i class="fas fa-file-pdf me-2"></i> CV</h4>
                                {% if candidature.cv %}
                                    <a href="{{ asset('uploads/cv/' ~ candidature.cv) }}" target="_blank" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-download me-2"></i> Télécharger le CV
                                    </a>
                                {% else %}
                                    <p class="fs-5 text-muted">Aucun CV disponible.</p>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Right Column: Candidature Details -->
                        <div class="col-md-8">
                            <div class="rounded-3 p-4 mb-4" style="background: rgba(255, 255, 255, 0.6);">
                                <h4 class="text-primary"><i class="fas fa-tools me-2"></i> Compétences</h4>
                                <p class="fs-5 text-muted">{{ candidature.competences }}</p>
                            </div>

                            <div class="rounded-3 p-4" style="background: rgba(255, 255, 255, 0.6);">
                                <h4 class="text-primary"><i class="fas fa-envelope-open-text me-2"></i> Lettre de Motivation</h4>
                                <p class="fs-5 text-muted">{{ candidature.lettreMotivation }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer: Return Button -->
                <div class="text-center py-4" style="background: rgba(0, 0, 0, 0.05);">
                    <a href="{{ path('front_candidatures') }}" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
