{% extends 'base.html.twig' %}

{% block title %}Modifier l'Offre d'Emploi{% endblock %}

{% block body %}
    <div class="breadcumb-wrapper text-center" data-bg-src="/assets/frontOffice/img/bg/breadcrumb-bg.png">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title">Modifier l'Offre d'Emploi</h1>
            </div>
        </div>
    </div> 

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group row mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mb-3">
                    {{ form_label(form.competences_requises, 'Comp√©tences requises', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.competences_requises, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mb-3">
                    {{ form_label(form.budget, 'Budget', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.budget, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mb-3">
                    {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mb-3">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Modifier
                        </button>
                        <a href="{{ path('app_emploi') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}