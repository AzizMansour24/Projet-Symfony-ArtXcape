            if (e.target.matches('input, textarea')) return;

            switch(e.key.toLowerCase()) {
                case 'k':
                    // Créer une nouvelle offre
                    window.location.href = '{{ path('emploi_add') }}';
                    break;

                case 'f':
                    // Focus sur la barre de recherche
                    e.preventDefault();
                    document.getElementById('search').focus();
                    break;

