        // Fonction pour mettre à jour les statistiques
        function updateJobStats(emploiId) {
            const statsContainer = document.querySelector(`#stats-${emploiId}`);
            if (!statsContainer) return;

            fetch(`/api/emploi/${emploiId}/stats`)
                .then(response => response.json())
                .then(stats => {
                    let html = '<div class="job-stats">';
                    
                    if (stats.recent > 0) {
                        html += `
                            <div class="stat-item recent">
                                <i class="fas fa-rocket text-success"></i>
                                <strong>${stats.recent}</strong> ${stats.recent === 1 ? 'personne a postulé' : 'personnes ont postulé'} 
                                ces 2 dernières heures !
                            </div>
                        `;
                    }

                    if (stats.daily > 0) {
                        html += `
                            <div class="stat-item daily">
                                <i class="fas fa-chart-line text-primary"></i>
                                <strong>${stats.daily}</strong> candidature${stats.daily > 1 ? 's' : ''} aujourd'hui
                            </div>
                        `;
                    }

                    html += `
                        <div class="stat-item total">
                            <i class="fas fa-users text-secondary"></i>
                            Total : <strong>${stats.total}</strong> candidature${stats.total > 1 ? 's' : ''}
                        </div>
                    `;

                    if (stats.total > 0) {
                        html += `
                            <div class="stat-update text-end mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-sync-alt"></i> 
                                    Dernière mise à jour : ${new Date(stats.lastUpdate).toLocaleTimeString()}
                                </small>
                            </div>
                        `;
                    } else {
                        html += `
                            <div class="text-center text-muted">
                                <i class="fas fa-info-circle"></i>
                                Aucune candidature pour le moment
                            </div>
                        `;
                    }

                    html += '</div>';
                    statsContainer.innerHTML = html;
                })
                .catch(error => {
                    console.error('Erreur lors du chargement des stats:', error);
                    statsContainer.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> 
                            Erreur lors du chargement des statistiques
                        </div>
                    `;
                });
        }

        // Mettre à jour les stats toutes les 2 minutes
        document.querySelectorAll('[id^="stats-"]').forEach(container => {
            const emploiId = container.id.split('-')[1];
            updateJobStats(emploiId);
