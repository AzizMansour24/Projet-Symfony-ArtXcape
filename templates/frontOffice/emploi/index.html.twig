                    // Navigation entre les offres
                    e.preventDefault();
                    const cards = document.querySelectorAll('.card.h-100');
                    const activeCard = document.activeElement.closest('.card.h-100');
                    let index = Array.from(cards).indexOf(activeCard);
                    
                    if (index === -1) index = 0;
                    else {
                        index += e.key === 'ArrowLeft' ? -1 : 1;
                        if (index < 0) index = cards.length - 1;
                        if (index >= cards.length) index = 0;
                    }
                    
                    cards[index].querySelector('.btn-outline-dark').focus();
                    cards[index].scrollIntoView({ behavior: 'smooth', block: 'center' });
                    break;
