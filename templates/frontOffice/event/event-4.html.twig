                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" 
                                               class="form-control" 
                                               id="donorname{{ event.idevent }}" 
                                               name="donorname" 
                                               placeholder="Your Name"
                                               value="{{ app.user ? app.user.nom : '' }}">
