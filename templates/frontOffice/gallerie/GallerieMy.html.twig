{% extends 'base.html.twig' %}

{% block body %}
    <!--==============================
    Breadcumb
    ============================== -->
    <div class="breadcumb-wrapper text-center" data-bg-src="/assets/frontOffice/img/bg/breadcrumb-bg.png">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title">Ma Galerie</h1>
            </div>
            <ul class="breadcumb-menu">
                <li><a href="{{ path('app_gallerie') }}">Galeries</a></li>
                <li class="active">Mon Espace</li>
            </ul>                
        </div> 
    </div>

    <!--==============================
    Galerie Section
    ==============================-->
    <div class="space-top space-extra-bottom">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% if galerie is null %}
                {# Si l'utilisateur n'a pas de galerie #}
                <div class="text-center">
                    <div class="no-gallery-box bg-white">
                        <img src="/assets/frontOffice/img/normal/empty-gallery.png" alt="Empty Gallery" class="mb-4" style="max-width: 200px;">
                        <h3 class="h4 mb-4">Vous n'avez pas encore de galerie</h3>
                        <p class="mb-4">Créez votre propre galerie pour commencer à partager vos œuvres d'art.</p>
                        <a href="#" class="btn" data-bs-toggle="modal" data-bs-target="#createGalleryModal">Créer ma galerie</a>
                    </div>
                </div>

                <!-- Modal Création Galerie -->
                <div class="modal fade" id="createGalleryModal" tabindex="-1" aria-labelledby="createGalleryModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="createGalleryModalLabel">Créer ma galerie</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                {{ form_start(form, {'attr': {'class': 'gallery-form', 'id': 'galleryForm'}}) }}
                                    <div class="form-group mb-4">
                                        {{ form_label(form.nom, 'Nom de la galerie', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nom, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid'),
                                                'placeholder': 'Entrez le nom de votre galerie'
                                            }
                                        }) }}
                                        {% if not form.nom.vars.valid %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.nom) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="form-group mb-4">
                                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid'),
                                                'placeholder': 'Décrivez votre galerie',
                                                'rows': '4'
                                            }
                                        }) }}
                                        {% if not form.description.vars.valid %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.description) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="text-end">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <button type="submit" class="btn">Créer</button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                {# Si l'utilisateur a une galerie #}
                <div class="gallery-info-box bg-white text-center mb-50">
                    <h2 class="h3 mb-4">{{ galerie.nom }}</h2>
                    <p class="gallery-description mb-4">{{ galerie.description }}</p>
                    <div class="gallery-actions">
                        <button class="btn-action btn-edit" data-bs-toggle="modal" data-bs-target="#editGalleryModal">
                            <i class="fas fa-edit"></i>
                            <span>Modifier</span>
                        </button>
                        <a href="{{ path('delete_galerie_front', {'id': galerie.id}) }}" 
                           class="btn-action btn-delete"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre galerie ?')">
                            <i class="fas fa-trash"></i>
                            <span>Supprimer</span>
                        </a>
                        <a href="{{ path('articles_galerie', {'id': galerie.id}) }}" 
                           class="btn-action btn-view">
                            <i class="fas fa-images"></i>
                            <span>Voir mes articles</span>
                        </a>
                        <a href="{{ path('mes_ventes', {'id': galerie.id}) }}" 
                           class="btn-action btn-sales">
                            <i class="fas fa-chart-line"></i>
                            <span>Voir mes ventes</span>
                        </a>
                    </div>
                </div>
            {% endif %}

            {# Section des articles likés - Toujours visible, en dehors des conditions #}
            <div class="liked-articles-section mt-5">
                <h3 class="text-center mb-4">Articles que vous aimez</h3>
                <div class="row g-4">
                    {% set hasLikedArticles = false %}
                    {% for artLike in likedArticles %}
                        {% set article = artLike.article %}
                        {% set hasLikedArticles = true %}
                        <div class="col-lg-4 col-md-6">
                            <div class="liked-article-card">
                                <div class="article-image">
                                    <img src="{{ asset('uploads/images/' ~ article.contenu) }}" 
                                         alt="{{ article.titre }}"
                                         class="img-fluid">
                                    <div class="article-overlay">
                                        <span class="price-tag">{{ article.prix }} Dt</span>
                                        {% if article.nbrarticle == 0 %}
                                            <span class="stock-status">Rupture de stock</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="article-info">
                                    <h4>{{ article.titre }}</h4>
                                    <p class="artist">Par {{ article.galerie.user.nom }} {{ article.galerie.user.prenom }}</p>
                                    <div class="article-meta">
                                        <span class="category"><i class="fas fa-tag"></i> {{ article.categorie }}</span>
                                        <span class="likes"><i class="fas fa-heart"></i> {{ article.nbrlikes }}</span>
                                    </div>
                                    <div class="article-actions">
                                        <a href="#QuickView-{{ article.id }}" class="btn-view-details popup-content">
                                            <i class="fas fa-eye"></i> Voir les détails
                                        </a>
                                        <a href="#" 
                                           class="btn-dislike"
                                           onclick="unlikeArticle({{ article.id }}, this)"
                                           data-article-id="{{ article.id }}">
                                            <i class="fas fa-heart-broken"></i> Retirer des favoris
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- PARTIE QUICK VIEW --> 
                            <div id="QuickView-{{ article.id }}" class="white-popup mfp-hide" style="max-width: 1200px;">
                                <div class="container bg-white quick-view-container">
                                    <div class="row gx-50">
                                        <div class="col-lg-6">
                                            <div class="product-big-img">
                                                <div class="img-wrapper">
                                                    <img src="{{ asset('uploads/images/' ~ article.contenu) }}" 
                                                         alt="Product Image"
                                                         class="product-image">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 align-self-center">
                                            <div class="product-about">
                                                <div class="category-tag mb-4">{{ article.categorie }}</div>
                                                <h2 class="product-title">{{ article.titre }}</h2>
                                                <p class="price">{{ article.prix }} <span class="currency">Dt</span></p>
                                                <div class="product-description">
                                                    <p>{{ article.description }}</p>
                                                </div>

                                                <div class="info-list">
                                                    <div class="info-item">
                                                        <i class="far fa-calendar-alt"></i>
                                                        <span>Publié le {{ article.datePub|date('d M Y') }}</span>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="far fa-heart"></i>
                                                        <span>{{ article.nbrlikes }} likes</span>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="far fa-user"></i>
                                                        <span>Artiste: <a href="{{ path('artiste_profile', {'id': article.galerie.user.id}) }}" 
                                                                     class="artist-link">{{ article.galerie.user.nom }} {{ article.galerie.user.prenom }}</a></span>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-phone"></i>
                                                        <span>Contact: {{ article.galerie.user.numtlf ?? 'Non renseigné' }}</span>
                                                    </div>
                                                </div>

                                                {% if article.nbrarticle > 0 %}
                                                    <div class="actions">
                                                        <div class="quantity-control">
                                                            <div class="quantity-nav">
                                                                <button type="button" class="quantity-button quantity-down">
                                                                    <span>-</span>
                                                                </button>
                                                                <input type="number" class="quantity-input" value="1" min="1" max="{{ article.nbrarticle }}" readonly>
                                                                <button type="button" class="quantity-button quantity-up">
                                                                    <span>+</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <a href="{{ path('article_payment', {'id': article.id}) }}?quantity=1" 
                                                           class="btn btn-primary buy-now">
                                                            Acheter maintenant
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <button title="Close (Esc)" type="button" class="mfp-close">✕</button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    
                    {% if not hasLikedArticles %}
                        <div class="col-12">
                            <div class="no-likes-message text-center">
                                <i class="far fa-heart mb-3"></i>
                                <h4>Vous n'avez pas encore liké d'articles</h4>
                                <p>Explorez notre galerie pour découvrir des œuvres qui vous plaisent</p>
                                <a href="{{ path('app_gallerie') }}" class="btn btn-primary mt-3">
                                    Explorer la galerie
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

                {% if editForm is not null %}
                    <!-- Modal Modification Galerie -->
                <div class="modal fade" id="editGalleryModal">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title">Modifier ma galerie</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                {{ form_start(editForm, {'attr': {'class': 'gallery-form'}}) }}
                                        <div class="form-group mb-4">
                                            {{ form_label(editForm.nom, 'Nom de la galerie', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(editForm.nom, {
                                                'attr': {
                                                    'class': 'form-control' ~ (editForm.nom.vars.valid ? '' : ' is-invalid'),
                                                    'placeholder': 'Entrez le nom de votre galerie'
                                                }
                                            }) }}
                                            {% if not editForm.nom.vars.valid %}
                                                <div class="invalid-feedback">
                                                    {{ form_errors(editForm.nom) }}
                                                </div>
                                            {% endif %}
                                        </div>

                                        <div class="form-group mb-4">
                                            {{ form_label(editForm.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(editForm.description, {
                                                'attr': {
                                                    'class': 'form-control' ~ (editForm.description.vars.valid ? '' : ' is-invalid'),
                                                    'placeholder': 'Décrivez votre galerie',
                                                    'rows': '4'
                                                }
                                            }) }}
                                            {% if not editForm.description.vars.valid %}
                                                <div class="invalid-feedback">
                                                    {{ form_errors(editForm.description) }}
                                                </div>
                                            {% endif %}
                                        </div>

                                        <div class="text-end">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                                        </div>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
            {% endif %}
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const createModal = new bootstrap.Modal(document.getElementById('createGalleryModal'));
        const editModal = new bootstrap.Modal(document.getElementById('editGalleryModal'));
        
        {% if form is not null and not form.vars.valid and app.request.method == 'POST' %}
            createModal.show();
        {% endif %}
        
        {% if editForm is not null and not editForm.vars.valid and app.request.method == 'POST' %}
            editModal.show();
        {% endif %}
    });

    function unlikeArticle(articleId, button) {
        if (confirm('Voulez-vous vraiment retirer cet article de vos favoris ?')) {
            fetch(`/article/${articleId}/like`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.code === 'SUCCESS') {
                    // Supprimer la carte de l'article
                    button.closest('.col-lg-4').remove();
                    
                    // Vérifier s'il reste des articles likés
                    const remainingCards = document.querySelectorAll('.liked-article-card');
                    if (remainingCards.length === 0) {
                        location.reload(); // Recharger pour afficher le message "aucun like"
                    }
                }
            });
        }
        return false;
    }

    // Initialisation de Magnific Popup
    $(document).ready(function() {
        $('.popup-content').magnificPopup({
            type: 'inline',
            preloader: false,
            mainClass: 'mfp-fade',
            callbacks: {
                open: function() {
                    // Réinitialiser la quantité à 1 à chaque ouverture
                    $(this.content).find('.quantity-input').val(1);
                }
            }
        });
    });

    // Gestionnaire de quantité
    document.querySelectorAll('.quantity-control').forEach(function(control) {
        const input = control.querySelector('.quantity-input');
        const upButton = control.querySelector('.quantity-up');
        const downButton = control.querySelector('.quantity-down');
        const max = parseInt(input.getAttribute('max'));
        const buyButton = control.closest('.actions').querySelector('.btn.btn-primary');

        function updateBuyButtonHref() {
            const currentHref = buyButton.getAttribute('href');
            const baseUrl = currentHref.split('?')[0];
            buyButton.href = `${baseUrl}?quantity=${input.value}`;
        }

        upButton.addEventListener('click', function() {
            const currentValue = parseInt(input.value);
            if (currentValue < max) {
                input.value = currentValue + 1;
                updateBuyButtonHref();
            }
        });

        downButton.addEventListener('click', function() {
            const currentValue = parseInt(input.value);
            if (currentValue > 1) {
                input.value = currentValue - 1;
                updateBuyButtonHref();
            }
        });

        // Initialiser le lien avec la quantité par défaut
        input.value = "1";
        updateBuyButtonHref();
    });
    </script>

    <style>
    /* Variables CSS pour une meilleure maintenabilité */
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #357abd;
        --success-color: #28a745;
        --danger-color: #dc3545;
        --info-color: #17a2b8;
        --shadow-sm: 0 2px 10px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 20px rgba(0,0,0,0.1);
        --shadow-lg: 0 8px 30px rgba(0,0,0,0.15);
        --border-radius: 15px;
        --transition: all 0.3s ease;
    }

    /* Style général des conteneurs */
    .gallery-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    /* Style pour la boîte vide */
    .no-gallery-box {
        background: white;
        padding: 60px 40px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-md);
        text-align: center;
        transition: var(--transition);
    }

    .no-gallery-box:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .no-gallery-box img {
        max-width: 200px;
        margin-bottom: 30px;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }

    /* Style pour la galerie existante */
    .gallery-info-box {
        background: white;
        padding: 40px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-md);
        position: relative;
        overflow: hidden;
    }

    .gallery-info-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    }

    .gallery-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
    }

    .gallery-description {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #666;
        margin-bottom: 30px;
    }

    /* Style commun pour les boutons d'action */
    .gallery-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }

    .btn-action::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(-100%);
        transition: transform 0.3s ease;
    }

    .btn-action:hover::before {
        transform: translateX(0);
    }

    .btn-action i {
        font-size: 18px;
        transition: transform 0.3s ease;
    }

    .btn-action:hover i {
        transform: translateY(-2px);
    }

    /* Style spécifique pour chaque bouton */
    .btn-edit {
        background: linear-gradient(135deg, #4a90e2, #357abd);
        color: white;
        box-shadow: 0 4px 15px rgba(74, 144, 226, 0.2);
    }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
    }

    .btn-view {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
    }

    .btn-sales {
        background: linear-gradient(45deg, #ff8f00, #ff6f00);
        color: white;
    }
    
    .btn-sales:hover {
        background: linear-gradient(45deg, #ff6f00, #ff8f00);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 143, 0, 0.3);
        color: white;
    }

    /* Effets hover */
    .btn-action:hover {
        transform: translateY(-3px);
    }

    .btn-edit:hover {
        box-shadow: 0 6px 20px rgba(74, 144, 226, 0.3);
    }

    .btn-delete:hover {
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.3);
    }

    .btn-view:hover {
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
    }

    /* Animation au clic */
    .btn-action:active {
        transform: translateY(-1px);
    }

    /* Animation d'entrée */
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .gallery-actions {
        animation: slideIn 0.5s ease-out forwards;
    }

    /* Style des alertes */
    .alert {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        position: relative;
        animation: slideDown 0.4s ease-out;
    }

    @keyframes slideDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    .alert-success {
        background: linear-gradient(to right, #d4edda, #c3e6cb);
        border-left: 5px solid var(--success-color);
        color: #155724;
    }

    .alert-danger {
        background: linear-gradient(to right, #f8d7da, #f5c6cb);
        border-left: 5px solid var(--danger-color);
        color: #721c24;
    }

    /* Style des modals */
    .modal-content {
        border-radius: var(--border-radius);
        border: none;
        box-shadow: var(--shadow-lg);
    }

    .modal-header {
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        color: white;
        border-top-left-radius: var(--border-radius);
        border-top-right-radius: var(--border-radius);
        padding: 20px;
    }

    .modal-body {
        padding: 30px;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        border: 2px solid #e0e0e0;
        transition: var(--transition);
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(74,144,226,0.2);
    }

